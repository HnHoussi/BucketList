{% extends 'base.html.twig' %}

{% block title %}Wish Details{% endblock %}

{% block body %}
    <div class="wish-card">
        <h2>{{ wish.title }}</h2>
        <p><strong>Description:</strong> {{ wish.description }}</p>
        <p><strong>Author:</strong> {{ wish.author }}</p>
        <p><strong>Created:</strong> {{ wish.dateCreated|date('d/m/Y') }}</p>
        {% if wish.dateUpdated %}
            <p><strong>Last Updated:</strong> {{ wish.dateUpdated|date('d/m/Y') }}</p>
        {% endif %}

        <a class="btn btn-primary" href="{{ path('app_wish_update', {id: wish.id}) }}">Edit wish</a>
        <a class="btn btn-danger" href="{{ path('app_wish_delete', {page: page, id: wish.id, token : csrf_token('delete' ~wish.id)}) }}" >Delete wish</a>
        <a class="btn btn-secondary" href="{{ path('app_wishes_list', {page: page}) }}">Back to wishes list</a>
    </div>
{% endblock %}
