{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Wish List {% endblock %}

{% block body %}
    <main class="container-fluid">
        <div class="content-wrapper">
            <h1>Wishes list</h1>
            <table>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Action</th>
                </tr>
                {% for wish in wishes %}
                    <tr>
                        <td>{{ wish.title }}</td>
                        <td>{{ wish.author }}</td>
                        <td><a href="{{ path('app_wish_details', { id: wish.id, page: page }) }}" class="btn btn-primary">Details</a></td>
                    </tr>
                {% endfor %}
            </table>

            <div class="pagination">
                {% if page > 1 %}
                    <a class="btn btn-primary" href="{{ path('app_wishes_list', { page: page - 1 }) }}">Previous</a>
                {% else %}
                    <button class="btn btn-secondary" disabled>Previous</button>
                {% endif %}

                <span>Page {{ page }} of {{ totalPages }}</span>

                {% if page < totalPages %}
                    <a class="btn btn-primary" href="{{ path('app_wishes_list', { page: page + 1 }) }}">Next</a>
                {% else %}
                    <button class="btn btn-secondary" disabled>Next</button>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}
